<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:converters="clr-namespace:Adopcat.Mobile.Util"
             x:Class="Adopcat.Mobile.Views.NewPosterPage"
             x:Name="MyPage"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ByteToImageFieldConverter x:Key="ByteArrayToImage" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <StackLayout VerticalOptions="FillAndExpand" Padding="10">
            <StackLayout 
                HorizontalOptions="Start">
                <ListView
                    HasUnevenRows="True"
                    VerticalOptions="StartAndExpand"
                    HeightRequest="200"
                    ItemsSource="{Binding PetImages}"
                    ItemSelected="ListView_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal" Padding="5">
                                    <Image 
                                        Source="{Binding Image, Converter={StaticResource Key=ByteArrayToImage}}" 
                                        HorizontalOptions="Start" 
                                        HeightRequest="100" 
                                        WidthRequest="100" />
                                    <Image 
                                        Source="icon_delete.png" 
                                        Aspect="AspectFit" 
                                        HorizontalOptions="EndAndExpand" 
                                        HeightRequest="35" 
                                        WidthRequest="35">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                NumberOfTapsRequired="1" 
                                                Command="{Binding Path=BindingContext.DeletePetPictureCommand, Source={x:Reference MyPage}}" 
                                                CommandParameter="{Binding Id}" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </StackLayout>                                
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Text="Adicionar foto" Command="{Binding PickPhotoCommand}" />
            </StackLayout>
            <Entry Placeholder="Nome" Text="{Binding PetName}" />
            <Picker ItemsSource="{Binding PetTypeList}" SelectedIndexChanged="Picker_SelectedIndexChanged" />
            <StackLayout Orientation="Horizontal">
                <Label Text="Castrado?" HorizontalOptions="StartAndExpand" />
                <Switch IsToggled="{Binding IsCastrated}" HorizontalOptions="End"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Vermifugado?" HorizontalOptions="StartAndExpand" />
                <Switch IsToggled="{Binding IsDewormed}" HorizontalOptions="End"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Leva até o adotante?" HorizontalOptions="StartAndExpand" />
                <Switch IsToggled="{Binding DeliverToAdopter}" HorizontalOptions="End"/>
            </StackLayout>
            <Button Text="Criar Anúncio" Command="{Binding CreatePosterCommand}" />
        </StackLayout>
    </ScrollView>
</ContentPage>